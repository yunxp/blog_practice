<%= form_for(@system_user) do |f|%>
	<div class="row">
	  <div class="col-md-6 col-md-offset-3" style="margin-top: 20px;">
			<div class="panel panel-default">
	      <div class="panel-body">
		      <% if @system_user.errors.any? %>
				    <div id="error_explanation">
				      <h2>
				        <%= pluralize(@system_user.errors.count, "error") %> prohibited
				        this system_user from being saved:
				      </h2>
				      <ul>
				        <% @system_user.errors.full_messages.each do |msg| %>
				          <li><%= msg %></li>
				        <% end %>
				      </ul>
				    </div>
				  <% end %>
				  <div class="form-group">
			      <%= @system_user.email %>
			    </div>
					<div class="form-group">
			      <%= f.label :username, "username:" %>
			      <%= f.text_field :username, class: 'form-control', required: true %>
			    </div>
			    <div class="form-group">
			      <%= f.label :avatar, "avatar:" %>
			      <%= f.file_field :avatar %>
			    </div>
			    <div class="form-group">
			      <%= f.label :signature, "signature:" %>
			      <%= f.text_area :signature, class: 'form-control', size: "100", required: true %>
			    </div>
			    <div class="form-group text-right">
		    		<%= f.submit "Save", class: "btn btn-primary" %>
		    	</div>
	    	</div>
    	</div>
		</div>
	</div>
<% end %>