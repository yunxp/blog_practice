<div class="row">
  <div class="col-md-6 col-md-offset-3" style="margin-top: 20px;">
    <div class="panel panel-default">
      <div class="panel-heading">Register</div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: "email" %>
        </div>
        <div class="form-group">
          <%= f.text_field :username, class: "form-control input-lg", placeholder: "username" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "password_confirmation" %>
        </div>

        <div class="form-group text-right">
          <%= f.submit "Sign up", class: "btn btn-primary", 'data-disable-with' => "submitting" %>
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>